---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import TestimonialSection from "../components/testimonials/Testimonials.astro";
import Testimonials from "../components/testimonials/Testimonials.astro";

const section_data: { title: string; text: string }[] = [
  {
    title: "Professional Auto Repair Services",
    text: "We provide high quality repair services for your vehicle. Trust us for reliable and quick services.",
  },
  {
    title: "Oil Change",
    text: "Quick and efficent oil changes with complimentary tire roatation.",
  },
  {
    title: "Engine Diagnostics",
    text: "We maintain the most advanced tools for diagnosing engine faults to ensure you know exactly what is wrong everytime.",
  },
];
---

<Layout title="Pflugerville Auto Repair Shop">
  <div class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-1"></main>
    {
      section_data.map((data, index) => (
        <Section id={index} title={data.title} text={data.text} />
      ))
    }
    <Testimonials />
    <footer class="h-14 flex items-center px-4 lg:px-6 bg-gray-800 text-white">
    </footer>
  </div>
</Layout>
