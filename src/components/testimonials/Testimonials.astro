---
import NextCard from "../NextCard";
---

<section id={`id`} class="w-full md:py-24 lg:py-32 bg-gray-200">
  <div class="container">
    <div class="flex flex-col items-center space-y-4 text-center">
      <h1
        class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
      >
        Testimonials
      </h1>
      <div class="flex flex-row gap-4">
        <NextCard header="Great Service" client:visible />
        <NextCard header="Awesome Expierence!" client:visible />
      </div>
    </div>
  </div>
</section>
